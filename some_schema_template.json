            "type": "string"
        },
        "alwaysOn": {
            "type": "bool"
        }
    },
    "variables": {
        "contentShare": "test-github-actions93c7"
    },
    "resources": [
        {
            "apiVersion": "2022-03-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "kind": "functionapp,linux",
            "location": "[parameters('location')]",
